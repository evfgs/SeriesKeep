<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="15dip">

    <TextView
        android:id="@+id/serie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorTextDark"
        android:shadowRadius="@integer/textBorderRadius"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textH1"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorTextDark"
        android:shadowRadius="@integer/textBorderRadius"
        android:text="@string/str_act_serie_dtls_label_overview"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textH2"
        android:textStyle="bold"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/serie_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="@string/str_act_serie_dtls_txt_overview_not_found"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/textH3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dip">

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-5dip"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3"
                android:stepSize="0.25"
                android:theme="@style/CustomRatingBar" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>